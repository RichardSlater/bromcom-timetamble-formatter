{
  "inputs": [
    {
      "id": "GITHUB_PERSONAL_ACCESS_TOKEN",
      "type": "promptString",
      "password": true,
      "description": "GitHub Personal Access Token"
    }
  ],
  "servers": {
    "github-official": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    }
  }
}
